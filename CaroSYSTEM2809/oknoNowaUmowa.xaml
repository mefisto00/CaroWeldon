                                <DataGridTextColumn Header="# producenta" Binding="{Binding ko_numerweldon}"/>
                                <DataGridTextColumn Header="typ" Binding="{Binding ko_typkontenera}"/>
                                <DataGridCheckBoxColumn Header="klima" Binding="{Binding ko_czyklimatyzowany}"/>
