                        <TextBox Name="poleCenaDemontazSchodow" Grid.Row="23" Grid.Column="0" materialDesign:HintAssist.Hint="cena demontażu schodów" Style="{StaticResource MaterialDesignFloatingHintTextBox}" Margin="20,0"/>
