                        <TextBox Name="poleNumerUmowyAneksu" Grid.Row="2" Grid.Column="1" materialDesign:HintAssist.Hint="numer umowy aneksowanej" Style="{StaticResource MaterialDesignFloatingHintTextBox}" Margin="20,0"/>

              
